@import './variables.styl'
@import 'nib'
@import 'rupture'

nav.navbar.navbar-default.navbar-fixed-top
	background white
	absolute top 0px
	border-bottom-width 5px
	border-color #CBDAF1
	opacity 0.8

	#navMain
		.navbar-nav
			li a
				font-size 16px
				font-weight: 700
				color blue
				&:hover
				&:focus
					color black
	
	+below(769px)
		size 100% 90px
		margin-bottom 0px
		opacity 1

		#navClientButtons
			display none
		#navMain
			margin-top 10px
			.navbar-header
				.navbar-brand
					margin-top -5px
					img
						size auto 45px
				button
					background transparent
					border none
			#mobileNavbar
				border none
				size 100% auto
				.navbar-nav
					margin-top 17px
					margin-bottom 0px
					background blue
					li a
						margin auto 10%
						color white
						i.fa
							float right
					.open
						a
						a:hover
						a:focus
							background transparent
						
					.dropdown
						.dropdown-menu
							padding 0px
							margin auto 10%
							border-radius 0px
							border-top 1px solid white
							border-bottom 1px solid white
							background-color blue
							a
								color white
								margin auto 0px
								&:hover
								&:focus
									background-color white
									color black
	+above(769px)
		size 100% 128px
		//dropdown on hover
		.dropdown:hover .dropdown-menu
			display block
		#navClientButtons
			display block
			background transparent
			ul
				list-style-type none
				li
					display inline
					margin 0px 10px 0px 0px
					a
						font-size 12px
						font-weight 700
						size 160px 30px
						background-color blue
						color white
						border none
						border-radius 0px
						padding 6px 0px
						&:hover
						&:focus
							background-color black
						i.fa
							padding-right 17px
		#navMain
			.navbar-header
				.navbar-brand
					margin-top -20px
					img		
						size 285px 60px
			.navbar-nav
				margin-top 10px
				.open
					a
					a:hover
					a:focus
						background transparent
					
				.dropdown
					a.dropdown-toggle
						padding-bottom 42px
					.dropdown-menu
						size 225px auto
						background-color blue
						a
							color white
							&:hover
							&:focus
								color black
						
		