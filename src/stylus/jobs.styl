@import './includes/variables'
@import './includes/layout'
@import 'nib'
@import 'rupture'

html body
	color black
	#featureImg
		//Very important
		overflow hidden
		z-index -1
		.item
			overflow hidden
			display block
	#headTitle
		size 100% auto
		h1
			text-align center
			margin auto
			color white
	#main
		.container
			.row
				.paragraph
					color grey
				.title
					margin 20px auto
					font-weight: 700
					color blue
				ul
					padding-left 0px
					list-style-type none
					li
						margin 10px auto
						text-align: center
						a
							font-size: 16px
							text-align: center
							font-weight: 700
			.row
				.btn.btn-default
					font-size: 14px
					background-color blue
					color white
					border none
					border-radius 0px
					display block
					margin 15px auto
					size 160px 30px

	+below(769px)
		#featureImg
			margin-top 90px
		#headTitle
			absolute top 155px
			h1
				font-size: 36px
				font-weight: 700
		#main
			padding-top 40px
			padding-bottom 20px
			p
				font-size: 16px
				line-height 25px
				margin 0px 8% 20px
				color grey
	+above(769px)
		#featureImg
			img
				margin-top 0px
		#headTitle
			absolute top 200px
			h1
				font-size: 60px
				font-weight: 700