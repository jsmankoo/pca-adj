@import './includes/variables'
@import './includes/layout'
@import 'nib'
@import 'rupture'

html body
	color black
	#featureImg
		//Very important
		overflow hidden
		z-index -1
		.item
			overflow hidden
			display block
	#headTitle
		size 100% auto
		h1
			text-align center
			margin auto
			color white
	#main
		p
			text-align center
			color grey
		.office
			.row
				.officeLocation
					font-weight: 700
					color blue
					border-bottom 1px solid blue
				//.officePhone
				//.member
					//.pic
					//.name
	

